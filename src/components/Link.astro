---
import Icon from "./Icon.astro"

const { newTab = false, href, className } = Astro.props

const attr: {
  href: string
  className?: string
  target?: "_blank"
  rel?: string
} = {
  href,
  className,
}

if (newTab) {
  attr.target = "_blank"
  attr.rel = "noopener noreferrer"
}

const icon = href.startsWith("https") ? "twitter" : null
---

<a {...attr}> {icon && <Icon type="x" size={15} />} <slot /></a>

<style>
  a {
   /* color: inherit;
   background-color: inherit; */
  }
</style>
