---
import Demos from "../components/Demos.astro"
import Header from "../components/Header.astro"
import { SITE } from "../consts"
import BaseDocument from "../components/BaseDocument.astro"
---

<BaseDocument title={SITE.title} description={SITE.description}>
  <Header />
  <hr />
  <main>
    <Demos />
  </main>
  <style lang="scss">
    hr {
      border-width: 5px;
      border: none;
      height: 1px;
      /* width: 60%; */
      margin: 20px 0 60px;
      background-color: color-mix(in srgb, var(--text-color), transparent 80%);
    }

    main {
      padding-bottom: 100px;
    }
    /*  */
  </style>
</BaseDocument>
